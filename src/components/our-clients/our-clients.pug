include layout/utils

-
    list = [
        require("assets/content/clients/client-1.png?as=webp"),
        require("assets/content/clients/client-2.png?as=webp"),
        require("assets/content/clients/client-3.png?as=webp"),
        require("assets/content/clients/client-4.png?as=webp"),
        require("assets/content/clients/client-5.png?as=webp"),
        require("assets/content/clients/client-6.png?as=webp"),
    ]

+section#our-clients.our-clients.section-border
    h2.title Наши клиенты
    .swiper.our-clients__list-wrapper: ul.swiper-wrapper.our-clients__list
        each client in list
            li.swiper-slide.our-clients__item: +img(client)
